<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="be.ehb.swp2.entity.UserAnswer" table="UserAnswers">
        <meta attribute="class-description">
            This class contains all the users
        </meta>
        <composite-id>
            <key-property name="userId" column="userId" type="integer"  />
            <key-property name="questionId" column="questionId" type="integer" />
        </composite-id>
        <property name="answer" column="answer" type="string"/>
    </class>
</hibernate-mapping>