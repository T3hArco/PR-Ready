<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="be.ehb.swp2.entity.question.QuestionAnswer" table="QuestionAnswer">
        <meta attribute="class-description">
            This class contains all the users
        </meta>
        <composite-id>
            <key-property name="questionId" column="questionId" type="int"/>
            <key-property name="answerId" column="answerId" type="int"/>
        </composite-id>
        <property name="correct" column="correct" type="yes_no"/>
    </class>
</hibernate-mapping>